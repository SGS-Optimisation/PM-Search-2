{
    "compilerOptions": {
        "importsNotUsedAsValues": "remove",
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": false,
        "lib": ["esnext", "dom"],
        "types": ["@types/node", "@types/ziggy-js", "vite/client"],
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "outDir": "./public/build/assets"
    },
    "typeRoots": ["./node_modules/@types", "resources/js/types"],
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue"
    ],
    "exclude": ["node_modules", "public"]
}
